{% ifAsync section.image %}
  <section class="postcard {{ 'left' if section.image_left }} top wrapper">
    <article class="content bg-alt vertical center middle flow">
      {{ postcard_content | safe }}
    </article>
    <div class="image">
      {% set image_path = section.image or site.header_image %}
      {% set alt_text = section.alt or site.alt %}
      <noscript><img src="{% twic path=image_path, params='/focus=auto/cover=1200x800' %}" alt="{{ alt_text }}"></noscript>
      <img src="{% lqip path=image_path, params='/focus=auto/cover=3:2' %}" alt="{{ alt_text }}" data-twic-src="{% twic_dyn path=image_path %}" data-twic-transform="cover=3:2/max" data-twic-step="40" data-twic-focus="auto" data-twic-bot="cover=1200x800" >
    </div>
  </section>
{% else %}
  <section class="postcard_content{{ ' bg-alt' | safe if section.alternate_background_color }}">
    <article class="wrapper vertical center flow">
      {{ postcard_content | safe }}
    </article>
  </section>
{% endif %}
