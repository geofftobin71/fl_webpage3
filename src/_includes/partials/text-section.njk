<section {{ 'class="bg-alt"' | safe if (section.alternate_background_color) }}>
  <article class="vertical center middle flow">
    {% if section.heading %}<h2 class="heading">{{ section.heading }}</h2>{% endif %}
    {% markdown section.text %}
    {% set button = section.button %}
    {% if button.text %}
      <a class="button" role="button" href="{{ button.url }}"{{ ' target="_blank" rel="noopener"' | safe if (button.url | externalLink) }}>{{ button.text }}</a>
    {% endif %}
  </article>
</section>
