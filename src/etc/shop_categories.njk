<?php
  $shop_categories = [
  {% for category in collections.shop_categories %}
    [
      "id" => "{{ category.data.id }}",
      "title" => "{{ category.data.title }}",
      "disabled" => {{ category.data.disabled or 'false' }},
      "inputPath" => "{{ category.inputPath | replace('./','') }}",
      "prices" => [
        {% for price in category.data.prices %}
          [
            "id" => "{{ price.id }}",
            {%- if price.label %}"label" => "{{ price.label }}",{% endif %}
            "price" => {{ price.price }},
            "disabled" => {{ price.disabled or 'false' }}
          ]{{',' if not loop.last }}
        {% endfor %}
      ]
    ]{{',' if not loop.last }}
  {% endfor %}
  ];
